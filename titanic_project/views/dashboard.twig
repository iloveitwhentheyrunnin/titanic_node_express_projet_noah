{% extends "base.twig" %}

{% block title %} Dashboard {% endblock %}
{% block head %}
    {{ parent() }}
    <style type="text/css">
        .important { color: #336699; }
    </style>
{% endblock %}
{% block content %}
    <h1>Dashboard</h1>
    {% if flash.success.length != 0 %}
				<div class="flash_success">{{ flash.success }}</div>
	{% endif %}
    <p class="important">
       Welcome to the Titanic Tool Dashboard! Find a survivor with this form, that has one of these property
    </p>
    <form action="/research" method="POST">
		<select name="sex">
            <option value="male">Male</option>
            <option value="female">Female</option>
        </select>
		<input type="int" class="form-control" placeholder="Age" name="age">
        <input type="int" class="form-control" placeholder="Class" name="pclass">
		<button type="submit" name="research">Research</button>
	</form>
     <a href="/logout"><h1><button id="research">Log out</button></h1></a>
{% endblock %}