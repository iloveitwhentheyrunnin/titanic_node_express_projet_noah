{% extends "base.twig" %}

{% block title %}
	{{title}}
{% endblock %}

{% block content %}
	<h1>{{title}}</h1>
		{% if flash.error.length != 0 %}
				<div class="flash_error">{{ flash.error }}</div>
		{% endif %}
	  <p class="important">
       Create your dumb access to the Titanic Database, as a register route didn't were asked for this tp :p
    </p>
	<form action="/signup" method="POST">
		<input type="text" required="true" class="form-control" placeholder="Name" name="name">
		<input type="password" required="true" class="form-control" placeholder="Password" name="password">
		<button type="submit" name="signup">Register</button>
	</form>
{% endblock %}
