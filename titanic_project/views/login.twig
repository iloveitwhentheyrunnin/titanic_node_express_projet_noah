{% extends "base.twig" %}

{% block title %}
	{{title}}
{% endblock %}

{% block content %}
	<h1>{{title}}</h1>
		{% if flash.error.length != 0 %}
				<div class="flash_error">{{ flash.error }}</div>
		{% endif %}
		{% if flash.success.length != 0 %}
				<div class="flash_success">{{ flash.success }}</div>
		{% endif %}
	<form action="/login" method="POST">
		<input type="text" required="true" class="form-control" placeholder="Name" name="name">
		<input type="password" required="true" class="form-control" placeholder="Password" name="password">
		<button type="submit" name="login">Connect</button>
	</form>
{% endblock %}
